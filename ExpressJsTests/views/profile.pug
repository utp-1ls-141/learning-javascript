extends newBase

block contenido
    .container
        .row
            .col
                 h3 Bienvenido, #{usuario} !
        .row
            .col
                h2 Lista de los estudiantes registrados 
        .row
            .col
                 table.table.table-bordered.table-hover.table-responsive
                    thead.thead-dark
                        tr
                            th #
                            th Nombre 
                            th Apellido 
                            th Edad 
                            th Cedula 
                            th Correo
                            th Carrera
                            th AÃ±o 
                            th Direccion
                            th Sexo
                            th Indice 
                            th
                            th 
        
                        tr 
                            -var number = 0;
                            each lista in modelo
                                form(action='/actualizar', method='POST')
                                    td #{number+1}  
                                    td #{lista.nombre}
                                        input#nombre(type='text' name='nombre')
                                    td #{lista.apellido}
                                        input#apellido(type='text' name='apellido')
                                    td #{lista.edad}
                                        input#edad(type='number' name='edad')
                                    td #{lista.cedula}
                                        input#cedula(type='hidden' name='cedula' value=lista.cedula)
                                    td #{lista.correo}
                                        input#correo(type='email' name='correo')
                                    td #{lista.carrera}
                                        input#carrera(type='text' name='carrera')
                                    td #{lista.year}
                                        input#year(type='number' name='year' min=1, max=5)
                                    td #{lista.direccion}
                                        textarea#direccion(name="direccion", cols="30", rows="10")
                                    td #{lista.sexo}
                                        select#sexo(name="sexo")
                                            option(value="hombre") Hombre
                                            option(value="mujer") Mujer
                                            option(value="NI") No identificado
                                    td #{lista.indice}
                                        input#indice(type='number' name='indice' step='.01' min=0 max=3)
                                    td 
                                        input(type='submit',value='Actualizar').btn.btn-success
                                form(action='/eliminar', method='POST')
                                    input(type='hidden', value=lista.cedula, name='cedula')
                                    td
                                        input(type='submit',value='Borrar').btn.btn-danger
                        tr 
                            form(method='POST', action='/insertar')
                                td Nuevo
                                td
                                    input#nombre(type='text' name='nombre')
                                td
                                    input#apellido(type='text' name='apellido') 
                                td
                                    input#edad(type='number' name='edad')
                                td
                                    input#cedula(type='text' name='cedula')
                                td
                                    input#correo(type='email' name='correo')
                                td
                                    input#carrera(type='text' name='carrera')
                                td
                                    input#year(type='number' name='year' min=1, max=5)       
                                td
                                    textarea#direccion(name="direccion", cols="30", rows="10")
                                td
                                    select#sexo(name="sexo")
                                        option(value="hombre") Hombre
                                        option(value="mujer") Mujer
                                        option(value="NI") No identificado
                                td
                                    input#indice(type='number' name='indice' step='.01' min=0 max=3)
                                td(colspan='2' style='text-align:center')
                                    input.btn.btn-primary(type='submit' value='Insertar') 
                                
                                    
            